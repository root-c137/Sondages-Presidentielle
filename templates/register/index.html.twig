{% extends 'base.html.twig' %}

{% block title %}Inscrivez-vous pour pouvoir voter{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('CSS/Inscription.css') }}"/>
    <link rel="stylesheet" href="{{ asset('CSS/FormInscription.css') }}"/>
    <link rel="stylesheet" href="{{ asset('CSS/Errors.css') }}"/>

{% endblock %}
{% block body %}

    <main class="InscriptionPresentation">


        <section class="Presentation">
            {% if not app.user %}
                <img class="IconSignUp" src="{{ asset('Images/inscription.svg') }}" />
                <p>{{ TxtInscription }}</p>
            {% else %}
                <p>Vous avez déjà un compte..</p>
            {% endif %}
        </section>

        {% if not app.user %}

            <section class="Inscription">

             {% embed 'Partials/Error.html.twig' %}{% endembed %}

                <div class="Formulaire">
                    {% embed 'register/FormInscription.html.twig' %}{% endembed %}
                </div>
            </section>

        {% endif %}

    </main>
{% endblock %}
